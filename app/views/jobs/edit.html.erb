<div class="col-md-8 col-centered">
  <div class="panel panel-default">
    <div class="panel-heading">编辑职位</div>
    <div class="panel-body">
      <%= simple_form_for @job do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :wage_lower_bound, :label => "费用下限" %>
      <%= f.input :wage_upper_bound, :label => "费用上限" %>
      <%= f.input :contact_email %>
      <%= f.input :is_hidden %>
      <%= f.submit "Submit" %>
      <% end %>
    </div>
  </div>
</div>
